<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/list_laundry_foto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/list_laundry_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Nama Bengkel"
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/list_laundry_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@+id/list_laundry_nama"
            android:layout_below="@+id/list_laundry_nama"
            android:theme="@style/RatingBar"/>

        <TextView
            android:id="@+id/list_laundry_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_laundry_rating"
            android:layout_alignParentStart="true"
            android:text="Alamat"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/list_laundry_jarak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/list_laundry_alamat"
            android:text="Jarak"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
